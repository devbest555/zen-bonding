{
  "name": "template-ethereum-contracts",
  "version": "0.1.0",
  "description": "Template to develop ethereum smart contracts",
  "private": true,
  "engines": {
    "node": ">= 14.0.0"
  },
  "repository": "github:wighawag/template-ethereum-contracts",
  "author": "wighawag",
  "license": "MIT",
  "keywords": [
    "ethereum",
    "smart-contracts",
    "template",
    "boilerplate",
    "hardhat",
    "solidity"
  ],
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers@0.3.0-beta.11",
    "@nomiclabs/hardhat-etherscan": "^2.1.4",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/contracts": "^3.4.1",
    "@typechain/ethers-v5": "^7.1.2",
    "@typechain/hardhat": "^2.3.0",
    "@types/chai": "^4.2.22",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.10.2",
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "@typescript-eslint/parser": "^4.32.0",
    "chai": "^4.2.0",
    "chai-ethers": "^0.0.1",
    "cross-env": "^7.0.2",
    "dotenv": "^10.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.4.7",
    "fs-extra": "^10.0.0",
    "hardhat": "^2.6.4",
    "hardhat-deploy": "^0.9.3",
    "hardhat-gas-reporter": "^1.0.4",
    "mocha": "^9.1.2",
    "prettier": "^2.4.1",
    "prettier-plugin-solidity": "^1.0.0-beta.18",
    "solhint": "^3.3.6",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.7.17",
    "ts-generator": "^0.1.1",
    "ts-node": "^10.2.1",
    "typechain": "^5.0.0",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "clean": "hardhat clean",
    "compile": "hardhat compile",
    "coverage": "hardhat coverage && COVERAGE=true yarn test",
    "coverage1": "hardhat coverage --solcoverjs ./.solcover.js --temp artifacts --testfiles \"./test/**/*.ts\"",
    "lint": "yarn run lint:sol && yarn run lint:ts && yarn run prettier:check",
    "lint:sol": "solhint --config ./.solhint.json --max-warnings 0 \"contracts/**/*.sol\"",
    "lint:ts": "eslint --config ./.eslintrc.yaml --ignore-path ./.eslintignore --ext .js,.ts .",
    "prettier": "prettier --config ./.prettierrc --write \"**/*.{js,json,md,sol,ts}\"",
    "prettier:check": "prettier --check --config ./.prettierrc \"**/*.{js,json,md,sol,ts}\"",
    "test": "hardhat test test/main.test.js",
    "test:kovan": "hardhat test test/main.test.js --network kovan",
    "test:fixture": "hardhat test test/main.test.js --deploy-fixture",
    "typechain": "hardhat typechain",

    "fork:rinkeby": "hardhat node --fork https://eth-rinkeby.alchemyapi.io/v2/khT7j5E7O7LBI-Vf53jsKg9epwhAk2uh",
    "run": "hardhat run --network",
    "deploy": "hardhat deploy --network",
    "verify": "hardhat verify --network",
    "deploy:mainnet": "hardhat deploy --network mainnet",
    "export:mainnet": "hardhat export --network mainnet --export deployments/mainnet.json",
    "verify:mainnet": "hardhat verify --network mainnet"
  }
}
